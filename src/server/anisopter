upstream _anisopter {
    server unix:/run/uwsgi/app/anisopter/socket;
}

server {
    listen [::]:80;
    listen 55080;
    server_name cloud-vm-47-117.doc.ic.ac.uk;
    root /home/anisopter/git/anisopter/src/server;

    location / {
        try_files $uri @uwsgi;
    }

    location @uwsgi {
        include uwsgi_params;
        uwsgi_read_timeout 1800;
        uwsgi_pass _anisopter;
    }
}
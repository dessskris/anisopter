upstream _anisopter {
    server unix:/run/uwsgi/ app/anisopter/socket;
}

server {
    listen [::]:55080;
    listen 55080;
    server_name cvm-g1453017.doc.ic.ac.uk;
    root /var/www/anisopter/src/server;

    location / {
        try_files $uri @uwsgi;
    }

    location @uwsgi {
        include uwsgi_params;
        uwsgi_pass _anisopter;
    }
}